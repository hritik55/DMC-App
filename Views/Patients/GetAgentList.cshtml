@model IEnumerable<Diagnostic_Medical_Center.Models.Agent>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAgentList</title>
    <style>
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(100px,1fr));
            grid-gap: 1rem;
            font-family:'Muli', sans-serif
        }

            .grid > div {
                background: grey;
                padding: 1rem;
            }

            .content{
                font-weight: 200;
                text-align:center;
                font-size:12px;
                padding-top: 5px;
            }
    </style>
    <script src="https://kit.fontawesome.com/3a5999d18b.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@200;300;400;500;800&display=swap" rel="stylesheet">
</head>
<body>
    <div class="panel-group" id="accordion">
        @foreach (var item in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <i class="fas fa-microscope fa-3x"></i>
                        <a data-toggle="collapse" data-parent="#accordion" href="#@item.AgentId">@item.AgentId</a>
                        @Html.DisplayFor(model => item.FirstName)
                    </h4>
                </div>
                <div id="@item.AgentId" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Action("GetAgentDetails", "Patients", new { @id = item.AgentId })
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
