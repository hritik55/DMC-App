@model Diagnostic_Medical_Center.Models.Admin
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DMC App</title>
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@200;300;400;500;800&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/3a5999d18b.js" crossorigin="anonymous"></script>
    <link href="~/Content/Dashboard.css" rel="stylesheet" />
    <style>
        .side-bar {
            left: 0;
            top: 0;
            z-index: 1;
            padding-top: 100px;
            width: 70px;
            background-color: #1f8aaa;
            position: fixed;
            height: 100%;
            overflow-x: hidden;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: center;
        }

            .side-bar i {
                font-size: 30px;
                padding-bottom: 5px;
                color: antiquewhite;
                align-self: center;
            }

            .side-bar a {
                padding: 10px 10px;
                font-size: 12px;
                line-height: 1.2em;
                text-decoration: none;
                color: aliceblue;
               
            }

        .tab-content {
            margin-top: 10px;
        }

        ul.nav.nav-tabs li:not(.active) a {
            background-color: #ffffff;
            color: grey;
        }

        ul.nav.nav-tabs li.active a {
            border-top: 3px solid #1f8aaa;
            background-color: #0188b4;
            color: #ffffff;
        }
    </style>

</head>
<body>
    <div class="side-bar">
        <a href="#"><i class="fas fa-user fa-5x"></i>Account</a><br>
        <a href="#"><i class="fas fa-user-md fa-5x"></i>Doctors</a><br>
        <a href="#"><i class="far fa-calendar-check"></i>Events</a><br>
        <a href="#"><i class="fas fa-hand-holding-medical"></i>Medicare<br>Services</a>
        <a href="@Url.Action("AgentRegister", "Registration")"><i class="fas fa-user-tie fa-5x"></i>Add Agents</a>
    </div>
    <div class="main">
        <div>
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab1">Admin Requests</a></li>
                <li><a data-toggle="tab" href="#tab2">Agent Requests</a></li>
                <li><a data-toggle="tab" href="#tab3">Doctor Requests</a></li>
                <li><a data-toggle="tab" href="#tab4">Patient Requests</a></li>
                <li><a data-toggle="tab" href="#tab5">View Test Results</a></li>
            </ul>
        </div>

    </div>

    <div class="tab-content">
        <div id="tab1" class="tab-pane fade in active">@Html.Action("GetDoctorDetails")</div>
        <div id="tab2" class="tab-pane fade in">@Html.Action("GetAgentDetails")</div>
        <div id="tab3" class="tab-pane fade in">@Html.Action("GetAdminDetails")</div>
        <div id="tab4" class="tab-pane fade in">@Html.Action("GetPatientDetails")</div>
        <div id="tab5" class="tab-pane fade in">@Html.Action("ViewTestRequests")</div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>