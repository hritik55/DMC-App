@model Diagnostic_Medical_Center.Models.Admin
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@200;300;400;500;800&display=swap" rel="stylesheet">

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Diagnostic Medical Center", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Logout", "Logout", "LoginManager")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    <h1>Welcome!</h1>
    <hr />
    <div class="row">
        <div class="col-lg-3" style="background-color: lightblue; padding: 10px; margin: 2px;">
            <p style="font-size: 2em; font-family: 'Muli', sans-serif; font-weight: 300; ">Pending Patient Requests</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("GetPatientDetails", "Administration")'">Get Details</button>
        </div >
        <div class="col-lg-3" style="background-color: lightblue; padding: 10px; margin: 2px;">
            <p  style="font-size: 2em; font-family: 'Muli', sans-serif; font-weight: 300; ">Pending Doctor Requests</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("GetDoctorDetails", "Administration")'">Get Details</button>
        </div >
        <div class="col-lg-3" style="background-color: lightblue; padding: 10px; margin: 2px;">
            <p  style="font-size: 2em; font-family: 'Muli', sans-serif; font-weight: 300">Pending Agent Requests</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("GetAgentDetails", "Administration")'">Get Details</button>
        </div >
        <div class="col-lg-3" style="background-color: lightblue; padding: 10px; margin: 2px;">
            <p  style="font-size: 2em; font-family: 'Muli', sans-serif; font-weight: 300">Pending Admin Requests</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("GetAdminDetails", "Administration")'">Get Details</button>
        </div >
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

</body>
</html>