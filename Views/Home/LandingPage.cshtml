@using System.Web.UI.WebControls
@model Diagnostic_Medical_Center.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diagnostic Medical Centre</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/LandingPage.css" rel="stylesheet" type="text/css"/>
</head>

<body class="content">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Diagnostic Medical Center", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>@Html.ActionLink("Administration", "Signin", "LoginManager")</li>
                    <li>@Html.ActionLink("Doctors", "Signin", "LoginManager")</li>
                    <li>@Html.ActionLink("Agents", "Signin", "LoginManager")</li>
                    <li>@Html.ActionLink("Patients", "Signin", "LoginManager")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

<div class="split left">
    <div class="centered">
        <div style="background-color: lightblue; padding: 10px; margin: 10px;">
            <p style="font-size: 1.5em; font-family: 'Muli', sans-serif; font-weight: 300;">New Patient Registration</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("PatientRegister", "Registration")'">Register</button>
        </div >
        <div style="background-color: lightblue; padding: 10px; margin: 10px;">
            <p style="font-size: 1.5em; font-family: 'Muli', sans-serif; font-weight: 300;">New Doctor Registration</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("DoctorRegister", "Registration")'">Register</button>
        </div >
        <div style="background-color: lightblue; padding: 10px; margin: 10px;">
            <p style="font-size: 1.5em; font-family: 'Muli', sans-serif; font-weight: 300">New Agent Registration</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("AgentRegister", "Registration")'">Register</button>
        </div >
        <div  style="background-color: lightblue; padding: 10px; margin: 10px;">
            <p style="font-size: 1.5em; font-family: 'Muli', sans-serif; font-weight: 300">New Admin Registration</p>
            <button class="btn btn-primary" onclick="location.href = '@Url.Action("AdminRegister", "Registration")'">Register</button>
        </div >
    </div>
    </div>

    <div class="split right">
        <div class="centered">
                  
            <h2>Already a Member?</h2>
            <button class="btn btn-lg btn-primary" onclick="location.href='@Url.Action("Signin","LoginManager")'">Log in</button>
           
        </div>
    </div>
       
</body>

</html>